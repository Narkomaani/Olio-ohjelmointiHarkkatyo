 <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings">
        <ListPreference
            app:defaultValue="eng"
            app:entries="@array/languages_array"
            app:entryValues="@array/languages_values"
            app:key="lang"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_mode"
            android:title="@string/darkmode" />
        <EditTextPreference
            app:title="Change email address"
            android:key="emailAddress"
            android:summary="Email address"/>
        <EditTextPreference
            app:title="Change password"
            android:key="password"/>

    </PreferenceCategory>




</PreferenceScreen>